{
    "id": "app.drey.PaperPlane",
    "runtime": "org.gnome.Platform",
    "runtime-version": "45",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "paper-plane",
    "finish-args": [
        "--socket=fallback-x11",
        "--socket=wayland",
        "--share=network",
        "--share=ipc",
        "--device=dri",
        "--env=G_MESSAGES_DEBUG=none",
        "--env=RUST_BACKTRACE=1"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin:/usr/lib/sdk/llvm15/bin:/app/bin"
    },
    "cleanup": [
        "/etc",
        "/include",
        "/lib/cmake",
        "/lib/girepository*",
        "/lib/pkgconfig",
        "/lib/python*",
        "/libexec",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/installed-tests",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "rlottie",
            "buildsystem": "meson",
            "config-opts": [
                "-Dbuildtype=release",
                "-Dexample=false",
                "-Dwerror=false"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/paper-plane-developers/rlottie",
                    "commit": "1dd47cec7eb8e1f657f02dce9c497ae60f7cf8c5"
                }
            ]
        },
        {
            "name": "blueprint-compiler",
            "buildsystem": "meson",
            "config-opts": [
                "-Dbuildtype=release"
            ],
            "cleanup": [
                "*"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler/-/archive/v0.8.1/blueprint-compiler-v0.8.1.tar.gz",
                    "sha256": "9207697cfac6e87a3c0ccf463be1a95c3bd06aa017c966a7e352ad5bc486cf3c"
                }
            ]
        },
        {
            "name": "libsass",
            "buildsystem": "meson",
            "cleanup": [
                "*"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/lazka/libsass.git",
                    "commit": "302397c0c8ae2d7ab02f45ea461c2c3d768f248e"
                }
            ]
        },
        {
            "name": "sassc",
            "buildsystem": "meson",
            "cleanup": [
                "*"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/lazka/sassc.git",
                    "commit": "82803377c33247265d779af034eceb5949e78354"
                }
            ]
        },
        {
            "name": "gtk",
            "buildsystem": "meson",
            "config-opts": [
                "-Dbuildtype=release",
                "-Dintrospection=disabled",
                "-Dprint-cups=disabled",
                "-Ddemos=false",
                "-Dbuild-testsuite=false",
                "-Dbuild-examples=false",
                "-Dbuild-tests=false"
            ],
            "cleanup": [
                "/bin/gtk*"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/gtk.git",
                    "commit": "06b3ced8e7fc936caed43379b120d75be09713ca",
                    "tag": "4.10.3"
                },
                {
                    "type": "patch",
                    "path": "gtk-reversed-list.patch"
                }
            ]
        },
        {
            "name": "appstream",
            "buildsystem": "meson",
            "config-opts": [
                "-Dbuildtype=release",
                "-Dstemming=false",
                "-Dgir=false",
                "-Dapidocs=false"
            ],
            "cleanup": [
                "/bin/appstreamcli"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/ximion/appstream.git",
                    "commit": "1ee6af91310f9deb47f3863a7a7ffb22c46bcce6",
                    "tag": "v0.16.2"
                }
            ],
            "modules": [
                {
                    "name": "libyaml",
                    "buildsystem": "autotools",
                    "sources": [
                        {
                            "type": "git",
                            "url": "https://github.com/yaml/libyaml.git",
                            "commit": "2c891fc7a770e8ba2fec34fc6b545c672beb37e6",
                            "tag": "0.2.5"
                        }
                    ]
                },
                {
                    "name": "libxmlb",
                    "buildsystem": "meson",
                    "config-opts": [
                        "-Dbuildtype=release",
                        "-Dintrospection=false",
                        "-Dtests=false",
                        "-Dcli=false",
                        "-Dgtkdoc=false"
                    ],
                    "sources": [
                        {
                            "type": "git",
                            "url": "https://github.com/hughsie/libxmlb.git",
                            "commit": "6191220071233972d798b57841d08e4964952a17",
                            "tag": "0.3.11"
                        }
                    ]
                }
            ]
        },
        {
            "name": "libadwaita",
            "buildsystem": "meson",
            "config-opts": [
                "-Dbuildtype=release",
                "-Dvapi=false",
                "-Dtests=false",
                "-Dexamples=false"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/libadwaita.git",
                    "commit": "57bc21b4c51aa361609fe6f57031630589391b0b"
                }
            ]
        },
        {
            "name": "tdlib",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/tdlib/td.git",
                    "commit": "8517026415e75a8eec567774072cbbbbb52376c1"
                }
            ]
        },
        {
            "name": "paper-plane",
            "buildsystem": "meson",
            "config-opts": [
                "-Dtg_api_id=22303002",
                "-Dtg_api_hash=3cc0969992690f032197e6609b296599"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/paper-plane-developers/paper-plane/releases/download/v0.1.0-beta.1/paper-plane-v0.1.0-beta.1.tar.xz",
                    "sha256": "1e940b8e23a108d2db7a7c3cfd53eb6fb922779b344e43fb44372e1b4b769208",
                    "strip-components": 0
                }
            ]
        }
    ]
}
